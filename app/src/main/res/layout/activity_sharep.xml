<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.kumaratul.hvac_award.Sharep">

    <Button
        android:id="@+id/button37"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Share By Call"
        android:layout_below="@+id/textView38"
        android:layout_alignStart="@+id/button38"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/call"
        android:layout_alignTop="@+id/button37"
        android:layout_toStartOf="@+id/button37" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/sym_action_chat"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/button37"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/button38"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Share By Message"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />





    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/sym_action_email"
        android:layout_below="@+id/imageView9"
        android:layout_toStartOf="@+id/button39" />

    <Button
        android:id="@+id/button39"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Share By Email"
        android:layout_below="@+id/button38"
        android:layout_toEndOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="25dp"
        android:textColor="@color/color1"
        android:background="@color/color3"/>


</RelativeLayout>

